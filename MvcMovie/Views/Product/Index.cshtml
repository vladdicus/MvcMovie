@model System.Collections.Generic.List<MvcMovies.Models.Product>

@{
    ViewData["Title"] = "Movie Rentals";
}

<h1>Movie Rentals</h1>

<form asp-action="Index" method="get">
    <p>
        <input type="text" name="searchString" placeholder="Search by title..." />
        <button type="submit">Search</button>
    </p>
</form>

<p>
    <a asp-controller="Product" asp-action="Create">Add New Movie</a> |
    <a asp-controller="Home" asp-action="Index">Home</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Copies Available</th>
            <th>Rental Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var currentMovie = Model[i];
            <tr>
                <td>@currentMovie.Id</td>
                <td>@currentMovie.Title</td>
                <td>@currentMovie.Genre</td>
                <td>@currentMovie.CopiesAvailable</td>
                <td>$@currentMovie.RentalPrice.ToString("0.00")</td>
                <td>
                    <a asp-controller="Product"
                       asp-action="Edit"
                       asp-route-id="@currentMovie.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
